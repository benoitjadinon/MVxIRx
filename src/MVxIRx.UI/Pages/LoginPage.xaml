<?xml version="1.0" encoding="utf-8" ?>
<views:MvxContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    x:Class="MVxIRx.UI.Pages.LoginPage"
    x:TypeArguments="viewModels:LoginViewModel"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
    xmlns:mvx="clr-namespace:MvvmCross.Forms.Bindings;assembly=MvvmCross.Forms"
    xmlns:local="clr-namespace:MVxIRx.UI.Pages"
    xmlns:viewModels="clr-namespace:MVxIRx.Core.ViewModels.Login;assembly=MVxIRx.Core"
    Title="AUTHENTICATION"
    >
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="LoginButt" Order="Primary" Text="Log In" Priority="0" Clicked="OnLoginClick" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="LoginEntry"
                   Text="Elon" />
            <Entry x:Name="PassEntry"
                   Text="BigFreakinRocketz"
                   IsPassword="true"
                   />
        </StackLayout>
    </ContentPage.Content>
</views:MvxContentPage>
